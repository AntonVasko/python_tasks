
<ClickerScreen@MDScreen>:
    md_bg_color: app.theme_cls.surfaceColor
    MDButton:
        style: "filled"
        id: click
        pos_hint: {"center_x": .5, "center_y": .9}
        size_hint: [14, 14]
        MDButtonIcon:
            icon: "play-circle"
    MDLabel:
        id: clicks
        text: '0 нажатий.'
        pos_hint: {"center_x": .5}
    MDNavigationBar:
        id: bar
        MDNavigationItem:
            id: toapp
            MDNavigationItemIcon:
                icon: "gamepad-square"
            MDNavigationItemLabel:
                text: "Игра"
        MDNavigationItem:
            id: toshop
            MDNavigationItemIcon:
                icon: "shopping"
            MDNavigationItemLabel:
                text: "Магазин"

<ShopScreen@MDScreen>:
    md_bg_color: app.theme_cls.surfaceColor
    MDSwiper:
        orientation: "vertical"
        id: swipe
        size_hint_x: None
        size_hint_y: None
        width: root.width
        items_spacing: dp(0)
        height: root.height - navi.height
        pos_hint: {"center_x": 0.5}
        y: navi.height + dp(200)
        MDSwiperItem:
            MDButton:
                id: first_upgrade
                MDButtonIcon:
                    icon: 'numeric-1'
                MDButtonText:
                    text: 'Улучшение 1. Цена - 20 кликов.'
        MDSwiperItem:
            MDButton:
                id: second_upgrade
                MDButtonIcon:
                    icon: 'numeric-2'
                MDButtonText:
                    text: 'Улучшение 2. Цена - 100 кликов.'
        MDSwiperItem:
            MDButton:
                id: third_upgrade
                MDButtonIcon:
                    icon: 'numeric-3'
                MDButtonText:
                    text: 'Улучшение 3. Цена - 500 кликов.'
    MDNavigationBar:
        id: navi
        MDNavigationItem:
            id: toapp
            MDNavigationItemIcon:
                icon: "gamepad-square"
            MDNavigationItemLabel:
                text: "Игра"
        MDNavigationItem:
            id: toshop
            MDNavigationItemIcon:
                icon: "shopping"
            MDNavigationItemLabel:
                text: "Магазин"
